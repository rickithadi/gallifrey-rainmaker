# Next.js Environment Variables
# Copy to .env.local and fill in your actual values

# Database Configuration
# For Vercel: Use Vercel Postgres
POSTGRES_URL="your-vercel-postgres-url"
POSTGRES_PRISMA_URL="your-vercel-postgres-prisma-url"
POSTGRES_URL_NON_POOLING="your-vercel-postgres-non-pooling-url"

# For other deployments: Standard PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/gallifrey_rainmaker"

# Cache/KV Store
# For Vercel: Use Vercel KV
KV_URL="your-vercel-kv-url"
KV_REST_API_URL="your-vercel-kv-rest-api-url"
KV_REST_API_TOKEN="your-vercel-kv-rest-api-token"

# Google Services
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
GOOGLE_SHEETS_ID="your-master-spreadsheet-id"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-key"

# Security
JWT_SECRET="your-secure-random-string-at-least-32-characters"
API_KEY="your-api-key-for-sheets-integration"

# External APIs (Optional)
CLEARBIT_API_KEY="your-clearbit-key"
HUNTER_IO_API_KEY="your-hunter-key"
APOLLO_API_KEY="your-apollo-key"

# Development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Production URLs (update for deployment)
# NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"